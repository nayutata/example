.common-mask {
    width: 100%;
    height: 100%;
    background: rgba(1255, 255, 255, 0.7);
    z-index: 10000;
    position: absolute;
    top: 0;
    left: 0;
    transition: all 1s ease-out;
    >div {
        text-align: center;
        position: absolute;
        width: 100%; // left: 50%;
        margin-left: -10px;
        top: 30%;
        .common-mask-text {
            font-size: 24px;
            font-weight: bold;
            padding: 30px;
        }
    }
}

.ant-spin-dot {
    position: relative;
    display: inline-block;
    width: 20px;
    height: 20px;
    transform: rotate(45deg);
    animation: antRotate 1.2s infinite linear;
}
@keyframes antRotate {
    100% {
        transform: rotate(405deg);
    }
}